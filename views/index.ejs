<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8">
    <title>Facelink</title>
</head>
<body>
<h1>Velkommen til Facelink</h1>

<h2>Opret en ny bruger</h2>
<form action="/users" method="POST">
    <input type="text" name="name" placeholder="Navn" required>
    <input type="email" name="email" placeholder="Email" required>
    <button type="submit">Opret bruger</button>
</form>

<h2>Opret et nyt post</h2>
<form action="/posts" method="POST">
    <textarea name="text" placeholder="Skriv noget..." required></textarea>
    <select name="user_id" required>
        <% users.forEach(user => { %>
            <option value="<%= user._id %>"><%= user.name %></option>
        <% }) %>
    </select>
    <button type="submit">Opret post</button>
</form>

<h2>Brugere</h2>
<ul>
    <% users.forEach(user => { %>
        <li><%= user.name %> - <%= user.email %></li>
    <% }) %>
</ul>

<a href="/posts">GÃ¥ til posts</a>
</body>
</html>
